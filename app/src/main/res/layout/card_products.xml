<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    app:cardElevation="@dimen/size_very_small"
    app:cardCornerRadius="@dimen/rounded"
    android:layout_margin="@dimen/size_small"
    android:background="@drawable/box_card_white">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
            android:padding="@dimen/size_small"
            android:orientation="horizontal">
            <ImageView android:layout_width="@dimen/icon_data" android:layout_height="@dimen/icon_data"
                android:src="@drawable/shopify"
                android:layout_gravity="center"
                android:id="@+id/icon_collection"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/size_medium">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:text="Try Out SAINTEK Eduka 2.0"
                    style="@style/text_title"
                    android:textSize="@dimen/text_small"
                    android:id="@+id/txt_title"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_display"
                    android:text="Product Name : Jimbaran"
                    android:layout_marginTop="@dimen/size_small"
                    android:id="@+id/txt_product_name"/>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_very_small"
                    android:orientation="horizontal">
                    <ImageView android:layout_width="@dimen/group_icon" android:layout_height="@dimen/group_icon"
                        android:src="@drawable/ic_inventory"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="2012"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/size_very_small"
                        style="@style/text_result"
                        android:id="@+id/txt_count"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/box_card_white"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>